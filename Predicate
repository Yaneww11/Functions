  string a[] ={"read", "my", "lips"};
  const int SIZE = sizeof a / sizeof a[0];//Намираме броя на елементите на масива
  string b[SIZE];
  string* endb = replace_copy_if(a, a + SIZE, b, contains_e, string("kiss"));
  string* beginb = b;
  while(beginb != endb)
  {
      cout << *beginb++ << endl;
  }

  return 0;
}

