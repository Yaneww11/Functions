#include <iostream>
#include <string.h>

using namespace std;

int DeleteElement(int arr[], int sizeArr, int elem);

int main()
{
 int arr[100], n, i, elem, sizeAfDel;
    cout<<"Enter the Size: ";
    cin>>n;
    if(n>0){
        cout<<"Enter "<<n<<" Array Elements: ";
        for(i=0; i<n; i++)
            cin>>arr[i];
        cout<<"\nEnter Element to Delete: ";
        cin>>elem;
        sizeAfDel = DeleteElement(arr, n, elem);
        if(sizeAfDel==1)
            cout<<"\nElement doesn't found in the Array!";
        else if(sizeAfDel==2)
        {
            cout<<"\nElement Deleted Successfully!";
            cout<<"\n\nThe New Array is empty! \n";
        }
        else
        {
            cout<<"\nElement Deleted Successfully!";
            cout<<"\n\nThe New Array is:\n";
            for(i=0; i<sizeAfDel; i++)
                cout<<arr[i]<<"  ";
        }
    }
    else
        cout<<"\nInvalid Input!";
    cout<<endl;
    return 0;
    }

    int DeleteElement(int arr[], int sizeArr, int elem){
    int i, j, found=0;
    for(i=0; i<sizeArr; i++)
    {
        if(arr[i]==elem)
        {
            for(j=i; j<(sizeArr-1); j++)
                arr[j] = arr[j+1];
            found++;
            i--;
            sizeArr--;
        }
    }
    if(found==0)
        return 1;
    else if(sizeArr ==0)
        return 2;
    else
        return sizeArr;
}
